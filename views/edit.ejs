<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>"></input>
        </div>
         <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>"></input>
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea id="editor" name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui blue big basic button" type="submit"></input>
    </form>
</div>
    <a href="/Blogs" id="backbutton" class="mini ui purple basic icon button">
  <i class="left arrow icon"></i>
  Back
</a>

