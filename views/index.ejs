<% include ./partials/header %>

<div class="ui main text container">
  <div class="ui huge center aligned header">Personal Blog App</div>
  <div class="ui small center aligned header">
    A personal space to share with the world
  </div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blog){ %>
      <div class="item">
        <div class="image">
          <img src="<%= blog.image %>" />
        </div>
        <div class="content">
          <a class="header" href="/blogs/<%=blog._id %>" <%="blog.title" %></a>
          <div class="meta">
            <span><%= blog.created.toDateString() %></span>
          </div>
          <div class="description">
            <% if (typeof blog.body == 'undefined' ) { %> no content <% } else {
            %> <%- blog.body.substring(0, 100) %>... <% } %>
          </div>
          <div class="extra">
            <a
              class="ui floated basic violet button"
              href="/blogs/<%=blog._id %>"
              >Read More<i class="right chevron icon"></i
            ></a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<% include ./partials/footer %>
